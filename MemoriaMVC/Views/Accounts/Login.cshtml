@model MemoriaMVC.ViewModel.Authentication.UserLoginViewModel

<div class="row justify-content-center mt-lg-2">
    <div class="col-md-6">
        <div class="card login-card">
            <div class="card-header">
                <h5 class="card-title text-center">Login Form</h5>
            </div>
            <div class="card-body">
                <form asp-action="Login" enctype="multipart/form-data" class="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (!string.IsNullOrEmpty(ViewData["Error"]?.ToString()))
                    {
                        <div class="alert alert-danger">
                            @ViewData["Error"]
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control google-form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control google-form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-right mt-3">
                        <input type="submit" value="Login" class="btn btn-outline-primary" />
                    </div>
                </form>
                <hr>
                <div class="text-center">
                    <p>New user? <a asp-controller="Accounts" asp-action="Register" style="text-decoration:none">Register</a></p>
                    <p>Or login with:</p>
                    <div class="social-login">
                        <!-- Place your social login buttons here -->
                        <button disabled class="btn btn-outline-primary">Google</button>
                        <button disabled class="btn btn-outline-primary">Facebook</button>
                        <button disabled class="btn btn-outline-primary">Twitter</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function() {
        var navBar = document.getElementById('main-nav-bar');
        navBar.style.display = "none";
        localStorage.setItem("IsUserLoggedIn", false);
    })
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
